        btn.innerHTML = '<svg class="w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg> Sending...';
        btn.disabled = true;

        try {
          const response = await fetch(form.action, {
            method: 'POST',
            body: new FormData(form),
            headers: { 'Accept': 'application/json' }
          });

          if (response.ok) {
            form.innerHTML = `
              <div class="text-center py-8">
                <svg class="w-16 h-16 text-success mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <h3 class="text-xl font-accent font-bold text-white mb-2">You're in!</h3>
                <p class="text-white/60 text-sm">We'll reach out within 24 hours to schedule your free strategy call. See you at IBS!</p>
              </div>
            `;
          } else {
            throw new Error('Form submission failed');
          }
        } catch (error) {
          // Still show thank you — the submission likely went through
          // or we want a graceful experience regardless
          form.innerHTML = `
            <div class="text-center py-8">
              <svg class="w-16 h-16 text-success mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <h3 class="text-xl font-accent font-bold text-white mb-2">You're in!</h3>
              <p class="text-white/60 text-sm">We'll reach out within 24 hours to schedule your free strategy call. See you at IBS!</p>
            </div>
          `;
        }
      });
    }

    // Hero stats count-up (runs after stat-fade-up)
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    if (!prefersReducedMotion) {
      const heroStatValues = document.querySelectorAll<HTMLElement>('.hero-stat-value');
      const duration = 1200;
      const easeOutCubic = (t: number) => 1 - Math.pow(1 - t, 3);

      const runCountUp = (el: HTMLElement, startTime: number) => {
        const prefix = el.dataset.countPrefix ?? '';
        const suffix = el.dataset.countSuffix ?? '';
        const decimals = el.hasAttribute('data-count-decimals') ? parseInt(el.dataset.countDecimals ?? '1', 10) : 0;
        const useCommas = el.hasAttribute('data-count-commas');
        const isRange = el.hasAttribute('data-count-range');
        const from = isRange ? parseFloat(el.dataset.countFrom ?? '0') : 0;
        const end = parseFloat(el.dataset.countEnd ?? '0');

        const tick = (now: number) => {
          const elapsed = now - startTime;
          const p = Math.min(elapsed / duration, 1);
          const t = easeOutCubic(p);
          let value: number;
          if (isRange) value = from + (end - from) * t;
          else value = end * t;
          let text: string;
          if (isRange) text = `${Math.round(from)}-${Math.round(value)}${suffix}`;
          else if (useCommas) text = `${prefix}${Math.round(value).toLocaleString()}${suffix}`;
          else text = `${prefix}${value.toFixed(decimals)}${suffix}`;
          el.textContent = text;
          if (p < 1) requestAnimationFrame(tick);
        };
        requestAnimationFrame(tick);
      };

      setTimeout(() => {
        heroStatValues.forEach((el, i) => {
          const startDelay = 80 * i;
          const startTime = performance.now() + startDelay;
          setTimeout(() => runCountUp(el, performance.now()), startDelay);
        });
      }, 500);
    } else {
      // Reduced motion: show final values immediately
      document.querySelectorAll<HTMLElement>('.hero-stat-value').forEach((el) => {
        const prefix = el.dataset.countPrefix ?? '';
        const suffix = el.dataset.countSuffix ?? '';
        const decimals = el.hasAttribute('data-count-decimals') ? parseInt(el.dataset.countDecimals ?? '1', 10) : 0;
        const useCommas = el.hasAttribute('data-count-commas');
        const isRange = el.hasAttribute('data-count-range');
        const from = isRange ? parseFloat(el.dataset.countFrom ?? '0') : 0;
        const end = parseFloat(el.dataset.countEnd ?? '0');
        if (isRange) el.textContent = `${Math.round(from)}-${Math.round(end)}${suffix}`;
        else if (useCommas) el.textContent = `${prefix}${Math.round(end).toLocaleString()}${suffix}`;
        else el.textContent = `${prefix}${end.toFixed(decimals)}${suffix}`;
      });
    }

    // Show mobile CTA only after user has scrolled past the form
    const mobileCta = document.getElementById('mobile-cta');
    const heroForm = document.getElementById('strategy-call');
    if (mobileCta && heroForm) {
      mobileCta.style.transition = 'transform 0.3s ease, opacity 0.3s ease';
      let ctaVisible = false;

      function hideCta() {
        ctaVisible = false;
        mobileCta.style.opacity = '0';
        mobileCta.style.top = 'auto';
        mobileCta.style.bottom = '0';
        mobileCta.style.transform = 'translateY(100%)';
      }

      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              hideCta();
            } else {
              const formTop = entry.boundingClientRect.top;
              if (formTop < 0) {
                ctaVisible = true;
                mobileCta.style.opacity = '1';
                positionCta();
              } else {
                hideCta();
              }
            }
          });
        },
        { threshold: 0.1 }
      );
      observer.observe(heroForm);

      // Pin CTA to the true visual bottom on iOS (handles Chrome toolbar show/hide)
      function positionCta() {
        if (!ctaVisible) {
          mobileCta.style.transform = 'translateY(100%)';
          return;
        }
        if (window.visualViewport) {
          const vv = window.visualViewport;
          const ctaH = mobileCta.offsetHeight;
          const top = vv.offsetTop + vv.height - ctaH;
          mobileCta.style.bottom = 'auto';
          mobileCta.style.top = `${top}px`;
          mobileCta.style.transform = 'translateY(0)';
        } else {
          mobileCta.style.transform = 'translateY(0)';
        }
      }

      if (window.visualViewport) {
        window.visualViewport.addEventListener('resize', positionCta);
        window.visualViewport.addEventListener('scroll', positionCta);
      }
    }


    // Stat scroll-reveal: animate stats when they enter the viewport
    document.querySelectorAll('.stat-reveal').forEach((el) => {
      const obs = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) entry.target.classList.add('is-visible');
          });
        },
        { threshold: 0.15, rootMargin: '0px 0px -20px 0px' }
      );
      obs.observe(el);
    });
  </script>
